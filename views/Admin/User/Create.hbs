{{>header}}
<title>Cental Car-Rent | Admin Section</title>
{{>navbar}}
{{>hero}}
<div class="container-fluid my-3">
    <div class="row">
        <div class="col-md-3">
            {{>sidebar}}
        </div>
        <div class="col-md-9">
            <h4 class="bg-primary p-3 text-center text-white">Users Create Page <a href="/admin/users"><i
                        class="fa fa-backward float-end text-light"></i> </a></h4>
            <form action="/admin/users/store" method="post">

                <div class="row">

                    <div class="col-md-6 mb-2">
                        <input type="text" name="name" placeholder="Name" class="form-control border-primary" value="{{data.name}}">
                        {{#if errorMessage.name}}
                        <p class="text-danger">{{errorMessage.name}}</p>
                        {{/if}}
                    </div>
                    <div class="col-md-6 mb-2">
                        <input type="text" name="username" placeholder="Userame" class="form-control border-primary" value="{{data.username}}">
                         {{#if errorMessage.username}}
                        <p class="text-danger">{{errorMessage.username}}</p>
                        {{/if}}
                    </div>

                    <div class="col-md-6 mb-2">
                        <input type="email" name="email" placeholder="Email" class="form-control border-primary" value="{{data.email}}">
                         {{#if errorMessage.email}}
                        <p class="text-danger">{{errorMessage.email}}</p>
                        {{/if}}
                    </div>
                    <div class="col-md-6 mb-2">
                        <input type="number" name="phone" placeholder="Phone" class="form-control border-primary" value="{{data.phone}}">
                         {{#if errorMessage.phone}}
                        <p class="text-danger">{{errorMessage.phone}}</p>
                        {{/if}}
                    </div>

                    <div class="col-md-6 mb-2">
                        <input type="password" name="password" placeholder="Password" class="form-control border-primary" value="{{data.password}}">
                         {{#if errorMessage.password}}
                        <p class="text-danger">{{errorMessage.password}}</p>
                        {{/if}}
                    </div>
                    <div class="col-md-6 mb-2">
                        <input type="password" name="cpassword" placeholder="Confirm Password" class="form-control border-primary" value="{{data.cpassword}}">
                    </div>

                    <div class="row">
                    <div class="col-md-6 mb-3">
                        <select name="role" class="form-select border-primary">
                            <option {{checkRole data.role 'User' }}>User</option>
                            <option {{checkRole data.role 'Admin' }}>Admin</option>
                        </select>
                    </div>
                   </div>

                    <div class="mb-2">
                        <button type="submit" class="btn btn-primary w-100 p-2">Create</button>
                    </div>

                </div>

            </form>
        </div>
    </div>
</div>

{{>footer}}