{{>header}}
<title>Cental Car-Rent | Admin Section</title>
{{>navbar}}
 {{>hero}}
<div class="container-fluid my-3">
    <div class="row">
        <div class="col-md-3">
            {{>sidebar}}
        </div>
        <div class="col-md-9">
            <h4 class="bg-primary p-3 text-center text-white">Users <a href="/admin/users/create"><i class="fa fa-plus float-end text-light"></i> </a></h4>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Password</th>
                        <th>Role</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                   {{#each data}}
                    <tr>
                        <th>{{name}}</th>
                        <th>{{username}}</th>
                        <th>{{email}}</th>
                        <th>{{phone}}</th>
                        <th>{{password}}</th>
                        <th>{{role}}</th>
                        <th><a href="/admin/users/edit/{{_id}}"><i class="fa fa-edit"></i></a></th>
                        <th><a href="/admin/users/delete/{{_id}}"><i class="fa fa-trash"></i></a></th>
                    </tr>
                   {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

{{>footer}}